<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/header.css">
    <link rel="stylesheet" href="../css/footer.css">
    <link rel="stylesheet" href="../css/checkout.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
        rel="stylesheet">
    <script src="../js/nav.js" type="text/javascript" defer></script>
    <script src="../js/footer.js" type="text/javascript" defer></script>
    <script src="../js/remove.js" type="text/javascript" defer></script>
    <link rel="shortcut icon" href="../img/Logo.png" />
    <title>Web-DHS</title>
</head>

<body>

    <nav-component></nav-component>

    <div class="grid-wrapper">
        <div class="checkout">
            <div class="form">
                <div id="title">Web-DHS Kassa</div>
                <a id="back" href="services">Tillbaka till produkter</a>

                <form method="post" action="/ordering" name="myemailform">
                    <p>
                        <label for='name'>Företagsnamn: </label><br>
                        <input class="form-text" type="text" name="name" placeholder="Företagsnamn">
                    </p>
                    <p>
                        <label for='email'>E-mail Address:</label><br>
                        <input class="form-text" type="text" name="email" placeholder="E-mail">
                    </p>
                    <p>
                        <label for='phone'>Telefonnummer:</label><br>
                        <input class="tel" type="tel" name="tel" placeholder="Telefonnummer">
                    </p>
                    <p>
                        <label for='message'>Övrig information:</label> <br>
                        <textarea class="form-info" name="message" placeholder="Övrig information"></textarea>
                    </p>
                    <p>
                        <input type="text" id="prod" name="item" value="" hidden>
                    </p>
                    <input class="submit" type="submit" name='submit' value="Köp här">
                </form>

            </div>

            <div id="product" class="product"  >
                <h1>Produkter</h1>


                <div id="prod">
                <% for (var i=0; i<data.length; i++){ %>
                    <div class="showcase">
                        <div class="card">
                            <img src="../uploads/<%=data[i].name%>.png" alt="">
                            <div>
                                <span>
                                    <%=data[i].name%>
                                </span>
                                <hr>
                                <span class="description">
                                    <%=data[i].description%>
                                </span>
                                <span class="price">
                                    <%=data[i].price%>kr
                                </span>
                            </div>
                            <a class="rm" href="<%-data[i].name%>">Läs mer</a>
                            <button class="rm" onclick="remove(<%=data[i].id%>)"> Remove

                        </div>

                    </div>
                    <%}%>
                </div>

            </div>

            <script>
                var item = []
                for (var i = 0; i <= localStorage.length; i++) {
                    var key = localStorage.key(i)
                    var prod = localStorage.getItem(key)
                    // console.log(prod)
                    //if(prod != `honey:core-sdk:*`){
                    localStorage.removeItem(`honey:core-sdk:*`)
                    item.push(JSON.parse(prod))
                    //}
                }

                var product = document.querySelector('#product')
                for (var j = 0; j < item.length; j++) {

                    var productElement = document.createElement("div")
                    productElement.innerHTML = `
                    <div class="showcase">
                        <div class="card">
                        <img src="../uploads/${item[j].name}.png">
                        <span>${item[j].name}</span>
                        <br>
                        <span class="description">${item[j].description}</span>
                        <span class="price">${item[j].price}kr</span>
                        </div>
                        <button class="rm" onclick="rm(${item[j].id})">X</button>
                        </div>        
                        </div>
                            `;
                    product.appendChild(productElement)
                }

                document.getElementById('prod').name = JSON.stringify(item);

                function rm(id) {
                    localStorage.removeItem(id)
                    location.reload()
                }
                function show(){
                    document.getElementById('prod').hidden = false
                }

            </script>

            <div class="checkbox">
                <p>
                    <label class="container">Betalning
                        <input type="radio" name="radio" value="show" id="show" onclick="show2();">
                        <span class="checkmark"></span>
                    </label>
                </p>
                <div id="div1" class="hide betalning">
                    <label class="container">Swish
                        <input type="radio" name="radio" value="show" id="show" onclick="show3();">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <hr>
                <p>
                    <label class="container">Frakt
                        <input type="radio" name="radio" onclick="show1();">
                        <span class="checkmark"></span>
                    </label>
                </p>

                <div id="div2" class="hide frakt">
                    <hr>
                    <a href="">
                        <img src="../img/frakt-black.png" class="img-bottom" alt="">
                        <img src="../img/frakt-grey.png" class="img-top" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>

    <footer-component></footer-component>

    <script src="../js/index.js"></script>
</body>

</html>
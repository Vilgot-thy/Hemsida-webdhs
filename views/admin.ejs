<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/header.css">
    <link rel="stylesheet" href="../css/footer.css">
    <link rel="stylesheet" href="../css/services.css">
    <link rel="stylesheet" href="../css/admin.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
        rel="stylesheet">
    <script src="../js/nav.js" type="text/javascript" defer></script>
    <script src="../js/footer.js" type="text/javascript" defer></script>
    <script src="../js/remove_prod.js" type="text/javascript" defer></script>
    <link rel="shortcut icon" href="../img/Logo.png" />
    <title>Document</title>
</head>

<body>

    <nav-component></nav-component>

    <div>
        <h1 id="admin_text">Admin</h1>
    </div>

    <div class="add-remove">
        <button class="add-remove" onclick="add()">Add products</button>
        <button class="add-remove" onclick="rem()"> remove products</button>
        <p style="padding: 10px; color: red; font-weight: bolder;">TRYCK EJ PÅ SUBMIT UTAN ATT LÄGGA IN ALLT!</p>
    </div>

    <div class="adding_product" hidden>
        <form method="post" action="/admin/add" enctype='multipart/form-data'>
            <p>
                <input type="radio" checked=true name="database"> webdhs
                <input type="radio" name="database"> Skölds

            </p>
            <p>
                <label> Product name </label>
                <input class="" type="text" name="name" placeholder="name">
            </p>
            <p>
                <label> Product description </label>
                <input class="" type="text" name="description" placeholder="description">
            </p>
            <p>
                <label> Product price </label>
                <input class="" type="text" name="price" placeholder="price">
            </p>
            <p>
                <label>Product img</label>
                <input class="" name="product_img" type="file">
            </p>
            <input class="submit" type="submit" name='submit' value="Submit">

        </form>
    </div>

    <div class="grid-wrapper" id="s-cards">

        <!-- RÖR KANSKE EJ -->
        <% for (var i=0; i<data.length; i++){ %>
            <div class="cards">
                <img src="../uploads/<%=data[i].name%>.png" alt="">
                <div>
                    <span class="t1">
                        <%=data[i].name%>
                    </span>
                    <hr>
                    <span>
                        <%=data[i].price%>kr
                    </span>
                    <span class="card-info">
                        <%=data[i].description%>
                    </span>
                </div>
                <a class="rm" href="<%-data[i].name%>">Läs mer</a>

            </div>
            <%}%>

                <% for (var i=0; i<bookingdata.length; i++){ %>
                    <div class="cards">
                        <img src="../uploads/<%=bookingdata[i].name%>.png" alt="">
                        <div>
                            <span class="t1">
                                <%=bookingdata[i].name%>
                            </span>
                            <hr>
                            <span>
                                <%=bookingdata[i].price%>kr
                            </span>
                            <span class="card-info">
                                <%=bookingdata[i].description%>
                            </span>
                        </div>
                        <a class="rm" href="<%-bookingdata[i].name%>">Läs mer</a>
                        <%}%>

                            <div id="s2">

                            </div>

                    </div>
    </div>


    <div class="grid-wrapper2" id="s-cards">

        <!-- RÖR KANSKE EJ -->
        <% for (var i=0; i<data.length; i++){ %>
            <div class="cards">
                <img src="../uploads/<%=data[i].name%>.png" alt="">
                <div>
                    <span class="t1">
                        <%=data[i].name%>
                    </span>
                    <hr>
                    <span>
                        <%=data[i].price%>kr
                    </span>
                    <span class="card-info">
                        <%=data[i].description%>
                    </span>
                </div>
                <a class="rm" href="<%-data[i].name%>">Läs mer</a>
                <%var prod_string=JSON.stringify(data[i])%>
                    <button class="remove" onclick="remove(<%=prod_string%>, 'products')"> Remove </button>
            </div>
            <%}%>

                <% for (var i=0; i<bookingdata.length; i++){ %>
                    <div class="cards">
                        <img src="../uploads/<%=bookingdata[i].name%>.png" alt="">
                        <div>
                            <span class="t1">
                                <%=bookingdata[i].name%>
                            </span>
                            <hr>
                            <span>
                                <%=bookingdata[i].price%>kr
                            </span>
                            <span class="card-info">
                                <%=bookingdata[i].description%>
                            </span>
                        </div>
                        <a class="rm" href="<%-bookingdata[i].name%>">Läs mer</a>
                        <%var prod_string=JSON.stringify(data[i])%>
                            <button class="remove" onclick="remove(<%=prod_string%>, 'products')"> Remove </button>
                            <%}%>

                                <div id="s2">
                                </div>
                    </div>
    </div>


    <script>
        function add() {
            document.querySelector('.adding_product').hidden = false;
        }

        function rem() {
            document.querySelector('.adding_product').hidden = true;
            document.querySelector('.grid-wrapper').style.display = "none";
            document.querySelector('.grid-wrapper2  ').style.display = "grid";


        }
    </script>


</body>

</html>